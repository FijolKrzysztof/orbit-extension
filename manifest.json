{
  "manifest_version": 3,

  "name": "Orbit Plugin",
  "description": "Extension for managing betting on Orbitx.com",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}
